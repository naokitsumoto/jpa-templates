<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="2.2"
        xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_2.xsd">
    
  <persistence-unit name="sample-pu" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>jpa.Entity1</class>
    <properties>
      <property name="jakarta.persistence.jdbc.driver" value="your driver path"/>
      <property name="jakarta.persistence.jdbc.url" value="your jdbc URL"/>
      <property name="jakarta.persistence.jdbc.user" value="your username"/>
      <property name="jakarta.persistence.jdbc.password" value="your password"/>
    </properties>
  </persistence-unit>
</persistence>